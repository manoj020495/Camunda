-- Create table for process instances
CREATE TABLE ZB_PROCESS_INSTANCE (
  ID VARCHAR2(255) PRIMARY KEY,
  PROCESS_DEFINITION_KEY NUMBER,
  BPMN_PROCESS_ID VARCHAR2(255),
  VERSION NUMBER,
  STATE VARCHAR2(50),
  START_TIME TIMESTAMP,
  END_TIME TIMESTAMP
);

-- Create table for jobs (tasks, timers, etc)
CREATE TABLE ZB_JOB (
  KEY NUMBER PRIMARY KEY,
  TYPE VARCHAR2(255),
  PROCESS_INSTANCE_KEY NUMBER,
  STATE VARCHAR2(50),
  WORKER VARCHAR2(255),
  RETRIES NUMBER,
  DEADLINE TIMESTAMP
);
