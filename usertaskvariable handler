import org.kie.api.runtime.process.WorkItem;
import org.kie.api.runtime.process.WorkItemHandler;
import org.kie.api.runtime.process.WorkItemManager;
import org.kie.internal.annotations.Wid;

@Wid(name = "MyCustomTask", displayName = "My Custom Task", category = "Custom",
parameters = {"inputParam: String"}, results = {"outputResult: String"})
public class MyCustomWorkItemHandler implements WorkItemHandler {

@Override
public void executeWorkItem(WorkItem workItem, WorkItemManager manager) {
String inputParam = (String) workItem.getParameter("inputParam");
String outputResult = "Processed: " + inputParam;

// Perform custom logic here
System.out.println("Executing MyCustomTask with input: " + inputParam);

java.util.Map<String, Object> results = new java.util.HashMap<>();
results.put("outputResult", outputResult);
manager.completeWorkItem(workItem.getId(), results);
}

@Override
public void abortWorkItem(WorkItem workItem, WorkItemManager manager) {
System.out.println("Aborting MyCustomTask.");
manager.abortWorkItem(workItem.getId());
}
}
